{
  "scripts": {
    "setup": "concurrently \"npm:setup:composer\" \"npm:setup:frontend\"",
    "setup:composer": "cd backend && composer install",
    "setup:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && php -S 127.0.0.1:8000 -t public",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "ngrok": "^5.0.0-beta.2",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
